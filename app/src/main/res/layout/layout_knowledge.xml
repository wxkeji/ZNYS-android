<?xml version="1.0" encoding="utf-8"?>
<com.znys.view.KnowledgeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_knowledge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/topbar_button_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:background="@color/transparent"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/content_descriptor" />

    </RelativeLayout>

    <ListView
        android:id="@+id/knowledge_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

</com.znys.view.KnowledgeView>
