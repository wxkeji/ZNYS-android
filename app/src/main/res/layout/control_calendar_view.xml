<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CalendarControl.Root">

    <LinearLayout
        style="@style/CalendarControl.Days"
        android:id="@+id/calendar_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/calendar_day_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CalendarControl.Day" />

        <TextView
            android:id="@+id/calendar_day_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CalendarControl.Day" />

        <TextView
            android:id="@+id/calendar_day_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CalendarControl.Day" />

        <TextView
            android:id="@+id/calendar_day_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CalendarControl.Day" />

        <TextView
            android:id="@+id/calendar_day_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CalendarControl.Day" />

        <TextView
            android:id="@+id/calendar_day_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CalendarControl.Day" />

        <TextView
            android:id="@+id/calendar_day_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CalendarControl.Day" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/calendar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar_days">

        <LinearLayout
            android:id="@+id/calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/calendar_grid_bg"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:orientation="vertical">

            <include layout="@layout/control_calendar_row" />

            <include layout="@layout/control_calendar_row" />

            <include layout="@layout/control_calendar_row" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>